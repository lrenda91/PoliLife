<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/timetable_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/aaa"
                android:src="@drawable/ic_timetable"
                android:padding="8dp"
                android:layout_width="100dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/title1"
                android:layout_toRightOf="@id/aaa"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/timetable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/aaa"
                android:text="@string/timetable_subtitle"
                android:layout_below="@id/title1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classrooms_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/bbb"
                android:src="@android:drawable/ic_dialog_info"
                android:layout_width="100dp"
                android:padding="8dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/title2"
                android:layout_toRightOf="@id/bbb"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/classrooms"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/bbb"
                android:layout_below="@id/title2"
                android:text="@string/classrooms_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/teachers_select"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ccc"
                android:src="@android:drawable/ic_media_play"
                android:layout_width="100dp"
                android:padding="8dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/title3"
                android:layout_toRightOf="@id/ccc"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/professors"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@id/ccc"
                android:layout_below="@id/title3"
                android:text="@string/professors_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>